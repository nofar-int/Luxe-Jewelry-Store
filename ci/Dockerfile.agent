FROM jenkins/agent:latest

USER root

# התקנת Docker CLI, git, Python3, pip, unzip, curl, venv support, setuptools, flake8
RUN apt-get update && \
    apt-get install -y docker.io git python3 python3-pip python3-venv python3-setuptools unzip curl flake8 && \
    rm -rf /var/lib/apt/lists/*

# התקנת Node.js 20 + npm עדכני (חובה לפני התקנת snyk)
RUN curl -fsSL https://deb.nodesource.com/setup_20.x | bash - && \
    apt-get install -y nodejs && \
    npm install -g npm@latest

# התקנת Snyk CLI דרך npm (עדיף על binary ישן)
RUN npm install -g snyk@latest

# התקנת AWS CLI v2
RUN curl "https://awscli.amazonaws.com/awscli-exe-linux-x86_64.zip" -o "awscliv2.zip" && \
    unzip awscliv2.zip && \
    ./aws/install --bin-dir /usr/local/bin && \
    rm -rf aws awscliv2.zip

# יצירת virtual environment עבור pytest ו־pytest-html
RUN python3 -m venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"

# עדכון pip והתקנת Pytest + Pytest-HTML בסביבה הווירטואלית
RUN pip install --upgrade pip pytest pytest-html

USER jenkins

WORKDIR /home/jenkins


